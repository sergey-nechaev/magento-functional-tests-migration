<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminDeleteProductFromWishlistOnBackendActionGroup">
        <arguments>
            <argument name="customer" type="entity"/>
            <argument name="product" type="entity"/>
        </arguments>
        <amOnPage url="{{AdminEditCustomerPage.url(customer.id)}}" stepKey="amOnCustomersPage"/>
        <waitForPageLoad stepKey="waitForPageLoad"/>
        <click selector="{{WishlistGeneralSection.WishlistTab}}" stepKey="clickWishlistTab"/>
        <waitForPageLoad stepKey="waitForPageLoad1"/>
        <click selector="{{WishlistGeneralSection.deleteProductFromWishlistByName(product.name)}}" stepKey="clickDeleteProduct"/>
        <waitForPageLoad stepKey="waitForPageLoad2"/>
        <click selector="{{CmsPagesPageActionsSection.deleteConfirm}}" stepKey="clickOk"/>
        <waitForLoadingMaskToDisappear stepKey="waitForLoadingMask"/>
    </actionGroup>

    <actionGroup name="AdminDeleteConfigProductFromWishlistOnBackendActionGroup" extends="AdminDeleteProductFromWishlistOnBackendActionGroup">
        <click selector="{{WishlistGeneralSection.deleteConfigProductFromWishlistByName(product.name)}}" stepKey="clickDeleteProduct"/>
    </actionGroup>
</actionGroups>