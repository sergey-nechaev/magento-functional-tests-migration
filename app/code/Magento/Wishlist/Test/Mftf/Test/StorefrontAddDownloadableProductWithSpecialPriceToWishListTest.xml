<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="StorefrontAddDownloadableProductWithSpecialPriceToWishListTest">
        <annotations>
            <stories value="Wishlist"/>
            <title value="Add downloadable Product with special price and category to Wishlist"/>
            <description value="Add downloadable Product with special price and category to Wishlist"/>
            <severity value="CRITICAL"/>
            <testCaseId value="MAGETWO-90131"/>
            <group value="wishlist"/>
            <group value="mtf_migrated"/>
        </annotations>
        <before>
            <!-- Create Data -->
            <createData entity="Simple_US_Customer" stepKey="createCustomer"/>
            <createData entity="_defaultCategory" stepKey="createCategory"/>
            <createData entity="DownloadableProductWithTwoLink100" stepKey="createDownloadableProduct">
                <field key="price">30</field>
                <requiredEntity createDataKey="createCategory"/>
            </createData>
            <createData entity="downloadableLink1" stepKey="addDownloadableLink1">
                <requiredEntity createDataKey="createDownloadableProduct"/>
            </createData>
            <createData entity="downloadableLink2" stepKey="addDownloadableLink2">
                <requiredEntity createDataKey="createDownloadableProduct"/>
            </createData>
            <createData entity="specialProductPrice20" stepKey="specialPriceToProduct">
                <requiredEntity createDataKey="createDownloadableProduct"/>
            </createData>
        </before>
        <after>
            <!-- Delete data -->
            <deleteData createDataKey="createCustomer" stepKey="deleteCustomer"/>
            <deleteData createDataKey="createCategory" stepKey="deleteCategory"/>
            <deleteData createDataKey="createDownloadableProduct" stepKey="deleteProduct"/>
            <actionGroup ref="logout" stepKey="logout"/>
        </after>

        <!-- 1. Login as a customer -->
        <actionGroup ref="LoginToStorefrontActionGroup" stepKey="loginToStorefrontAccount">
            <argument name="Customer" value="$$createCustomer$$"/>
        </actionGroup>

        <!-- 2. Navigate to catalog page -->
        <actionGroup ref="StorefrontNavigateCategoryPageActionGroup" stepKey="openProductFromCategory">
            <argument name="category" value="$$createCategory$$"/>
        </actionGroup>

        <!--  3. Add created product to Wishlist according to dataset and assert add product to wishlist success message -->
        <actionGroup ref="StorefrontCustomerAddCategoryProductToWishlistActionGroup" stepKey="addProductToWishlist">
            <argument name="productVar" value="$$createDownloadableProduct$$"/>
        </actionGroup>

        <!-- Assert product is present in wishlist -->
        <see userInput="$20.00" selector="{{StorefrontCustomerWishlistProductSection.ProductSpecialPriceByName($$createDownloadableProduct.name$$)}}" stepKey="AssertWishlistSpecialPrice"/>
        <see userInput="$30.00" selector="{{StorefrontCustomerWishlistProductSection.ProductOldPriceByName($$createDownloadableProduct.name$$)}}" stepKey="assertProductRegularPriceOnStorefront"/>
        <moveMouseOver selector="{{StorefrontCustomerWishlistProductSection.ProductInfoByName($$createDownloadableProduct.name$$)}}" stepKey="wishlistMoveMouseOverProduct"/>
        <seeElement selector="{{StorefrontCustomerWishlistProductSection.ProductAddToCartByName($$createDownloadableProduct.name$$)}}" stepKey="AssertWishlistAddToCart"/>
        <seeElement selector="{{StorefrontCustomerWishlistProductSection.ProductImageByName($$createDownloadableProduct.name$$)}}" stepKey="AssertWishlistProductImage"/>


        <!-- Assert product is present in customer backend wishlist -->
        <actionGroup ref="LoginAsAdmin" stepKey="LoginAsAdmin"/>
        <actionGroup ref="AdminAssertProductIsPresentInCustomerBackendWishlistActionGroup" stepKey="assertProductIsPresentInCustomerBackendWishlist">
            <argument name="customer" value="$$createCustomer$$"/>
            <argument name="product" value="$$createDownloadableProduct$$"/>
        </actionGroup>
    </test>
</tests>
