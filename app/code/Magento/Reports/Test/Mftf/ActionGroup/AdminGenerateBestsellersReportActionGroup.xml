<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminGenerateBestsellersReportActionGroup">
        <annotations>
            <description>Bestsellers report page. Enters the provided Order From/To Dates, Period, Show Empty Rows select value. Clicks on 'Show Report' button.</description>
        </annotations>
        <arguments>
            <argument name="orderFromDate" type="string"/>
            <argument name="orderToDate" type="string"/>
            <argument name="period" type="string" defaultValue="Day"/>
            <argument name="showEmptyRows" type="string" defaultValue="No"/>
        </arguments>

        <click selector="{{BestsellersReportFilterSection.periodSelect}}" stepKey="clickPeriodSelect"/>
        <click selector="{{BestsellersReportFilterSection.periodSelectOption(period)}}" stepKey="selectPeriod"/>
        <fillField selector="{{BestsellersReportFilterSection.dateFrom}}" userInput="{{orderFromDate}}" stepKey="fillFromDate"/>
        <fillField selector="{{BestsellersReportFilterSection.dateTo}}" userInput="{{orderToDate}}" stepKey="fillToDate"/>
        <click selector="{{BestsellersReportFilterSection.showEmptyRowsSelect}}" stepKey="clickShowEmptyRowsSelect"/>
        <click selector="{{BestsellersReportFilterSection.showEmptyRowsSelectOption(showEmptyRows)}}" stepKey="setShowEmptyRowsSelectValue"/>
        <click selector="{{BestsellersReportFilterSection.buttonShowReport}}" stepKey="clickShowReport"/>
        <waitForPageLoad stepKey="waitForReport"/>

    </actionGroup>
</actionGroups>
