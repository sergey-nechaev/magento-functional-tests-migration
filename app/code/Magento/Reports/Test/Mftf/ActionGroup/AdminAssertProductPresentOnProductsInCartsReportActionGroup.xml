<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminAssertProductPresentOnProductsInCartsReportActionGroup">
        <annotations>
            <description>Assert that product with a given name is present on Product In Carts Report</description>
        </annotations>
        <arguments>
            <argument name="productName" type="string"/>
        </arguments>
        <seeElement selector="{{AdminReportProductsInCartsGridSection.productsInCartsReportsProductGridCell(productName)}}" stepKey="seeProductInReportGrid"/>
    </actionGroup>
</actionGroups>
