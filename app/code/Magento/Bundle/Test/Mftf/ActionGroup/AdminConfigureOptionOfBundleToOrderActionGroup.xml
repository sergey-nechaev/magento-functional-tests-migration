<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminConfigureOptionOfBundleToOrderActionGroup">
        <annotations>
            <description>Select product for option of Bundle</description>
        </annotations>
        <arguments>
            <argument name="option" type="string"/>
            <argument name="productToSelect" type="string"/>
        </arguments>
        <click selector="{{AdminOrderFormConfigureProductSection.bundleSelect(option)}}" stepKey="clickSelector"/>
        <selectOption selector="{{AdminOrderFormConfigureProductSection.bundleSelect(option)}}" userInput="{{productToSelect}}" stepKey="configureOption"/>
        <waitForAjaxLoad stepKey="waitForAjaxLoad"/>
    </actionGroup>
</actionGroups>
