<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <!-- Go to Home Page, Search Product By Sku and Assert Product Name -->
    <actionGroup name="AssertProductSearchableBySkuActionGroup">
        <arguments>
            <argument name="product"/>
        </arguments>
        <amOnPage url="{{StorefrontHomePage.url}}" stepKey="goToStorefront"/>
        <waitForPageLoad stepKey="waitForStoreFrontProductPageLoad"/>
        <fillField selector="{{StorefrontQuickSearchResultsSection.searchTextBox}}" userInput="{{product.sku}}" stepKey="fillVirtualProductName"/>
        <waitForPageLoad stepKey="waitForSearchTextBox"/>
        <click selector="{{StorefrontQuickSearchResultsSection.searchTextBoxButton}}" stepKey="clickSearchTextBoxButton"/>
        <waitForPageLoad stepKey="waitForSearch"/>
        <see selector="{{StorefrontQuickSearchResultsSection.productLink}}" userInput="{{product.name}}" stepKey="seeProductName"/>
    </actionGroup>
</actionGroups>
