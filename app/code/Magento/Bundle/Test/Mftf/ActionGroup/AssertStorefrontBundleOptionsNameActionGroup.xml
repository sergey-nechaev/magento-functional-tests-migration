<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AssertStorefrontBundleOptionsNameActionGroup">
        <annotations>
            <description> Check if option's name matches specified in arguments </description>
        </annotations>
        <arguments>
            <argument name="index" type="string" defaultValue="1"/>
            <argument name="optionName" type="string"/>
        </arguments>

        <see selector="{{StorefrontBundledSection.nthItemOptionsTitleXPath(index)}}" userInput="{{optionName}}" stepKey="seeOptionName"/>

    </actionGroup>
</actionGroups>
