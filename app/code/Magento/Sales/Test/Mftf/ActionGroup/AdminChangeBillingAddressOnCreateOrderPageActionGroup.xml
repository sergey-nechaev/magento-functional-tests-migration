<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <!--Select specified billing address on the Create Order page-->
    <actionGroup name="AdminChangeBillingAddressOnCreateOrderPageActionGroup">
        <arguments>
            <argument name="address" type="string"/>
        </arguments>
        <selectOption selector="{{AdminOrderFormBillingAddressSection.selectAddress}}" userInput="{{address}}" stepKey="selectAddress" />
        <waitForPageLoad stepKey="waitForChangeOfBillingAddress"/>
        <waitForPageLoad stepKey="waitForUpdateOfPaymentMethods"/>
    </actionGroup>
</actionGroups>
