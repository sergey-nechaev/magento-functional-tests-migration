<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminClickConfigureLinkOnCreateOrderPageActionGroup">
        <annotations>
            <description>Click the "Configure" link for the first configurable/bundle/simple with custom options product in the "Please select products" grid</description>
        </annotations>
        <scrollTo selector="{{AdminOrderFormConfigureProductSection.bundleItems}}" stepKey="scroll"/>
        <click selector="{{AdminOrderFormConfigureProductSection.bundleItems}}" stepKey="focusOnSideDialog"/>
        <waitForAjaxLoad stepKey="waitForAjax"/>
    </actionGroup>
</actionGroups>
