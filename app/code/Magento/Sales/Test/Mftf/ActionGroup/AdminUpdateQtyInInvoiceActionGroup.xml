<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminUpdateQtyInInvoiceActionGroup">
        <annotations>
            <description>Click the "Update qty's" button in the "Items to invoice" section</description>
        </annotations>

        <click selector="{{AdminInvoiceItemsSection.updateQty}}" stepKey="updateQuantity"/>
        <waitForPageLoad stepKey="waitPageToBeLoaded"/>

    </actionGroup>
</actionGroups>
