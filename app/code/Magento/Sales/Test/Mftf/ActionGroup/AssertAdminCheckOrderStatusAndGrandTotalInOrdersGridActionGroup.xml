<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AssertAdminCheckOrderStatusAndGrandTotalInOrdersGridActionGroup"  extends="FilterOrderGridByIdActionGroup">
        <arguments>
            <argument name="status" type="string"/>
            <argument name="grandTotal" type="string"/>
        </arguments>

        <see userInput="{{status}}" selector="{{AdminOrdersGridSection.gridCell('1','Status')}}" stepKey="assertOrderStatus"/>
        <see userInput="{{grandTotal}}" selector="{{AdminOrdersGridSection.gridCell('1','Grand Total (Purchased)')}}" stepKey="assertOrderGrandTotal"/>
    </actionGroup>
</actionGroups>
