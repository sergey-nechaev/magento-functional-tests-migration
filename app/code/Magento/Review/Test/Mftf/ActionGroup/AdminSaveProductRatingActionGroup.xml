<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminSaveProductRatingActionGroup">
        <annotations>
            <description>Saves a product rating and sees a success message</description>
        </annotations>
        <click selector="{{AdminNewRatingSection.saveButton}}" stepKey="saveRating"/>
        <waitForPageLoad stepKey="waitForSaveResultLoad"/>
        <see userInput="You saved the rating." stepKey="seeSuccessMessage" />
    </actionGroup>
</actionGroups>
