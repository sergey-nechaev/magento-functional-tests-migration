<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminOpenNewRatingFormActionGroup">
        <annotations>
            <description>Opens a new product rating form</description>
        </annotations>
        <amOnPage url="{{AdminRatingGridPage.url}}" stepKey="amOnRatingGridPage"/>
        <click selector="#add" stepKey="clickNewRatingButton"/>
        <waitForPageLoad stepKey="waitForNewRatingPageToLoad"/>
    </actionGroup>
</actionGroups>
