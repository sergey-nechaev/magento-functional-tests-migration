<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="AdminDeleteProductRatingTest">
        <annotations>
            <features value="Review"/>
            <stories value="Delete a product rating from the admin"/>
            <title value="Delete a product rating from the admin"/>
            <description value="Admin should be able to delete a product rating"/>
            <severity value="MAJOR"/>
            <testCaseId value=""/>
            <group value="review"/>
            <group value="mtf_migrated"/>
            <group value="debug"/>
        </annotations>

        <before>
            <createData entity="SimpleProductWithDescription" stepKey="createProduct"/>
            <createData entity="ProductRatingActiveDefaultStore" stepKey="createProductRating" />
            <actionGroup ref="LoginAsAdmin" stepKey="LoginAsAdmin"/>
        </before>
        <after>
            <deleteData createDataKey="createProduct" stepKey="deleteProduct"/>
        </after>

        <actionGroup ref="AdminDeleteProductRatingActionGroup" stepKey="deleteProductRating">
            <argument name="productRatingTitle" value="$createProductRating.rating_code$" />
        </actionGroup>

        <actionGroup ref="AdminSearchForRatingCodeInGridActionGroup" stepKey="assertRatingCodeInGrid">
            <argument name="ratingCode" value="$createProductRating.rating_code$" />
        </actionGroup>
        <dontSee selector="{{AdminRatingGridSection.firstRow}}" userInput="$createProductRating.rating_code$"
             stepKey="dontSeeRatingCodeInGrid"/>

        <actionGroup ref="logout" stepKey="logout"/>

        <actionGroup ref="StorefrontOpenProductPageActionGroup" stepKey="openCreatedProductPage">
            <argument name="productUrl" value="$$createProduct.custom_attributes[url_key]$$"/>
        </actionGroup>
        <click selector="{{StorefrontProductReviewsSection.reviewsTab}}" stepKey="openReviewTab"/>
        <dontSeeElement selector="#$createProductRating.rating_code$_rating_label" stepKey="dontSeeProductRating"/>

    </test>

</tests>
