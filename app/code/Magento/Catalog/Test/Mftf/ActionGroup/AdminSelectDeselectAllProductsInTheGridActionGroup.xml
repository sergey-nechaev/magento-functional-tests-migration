<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminSelectDeselectAllProductsInTheGridActionGroup">
        <annotations>
            <description>Select or deselect all products in grid.</description>
        </annotations>
        <arguments>
            <argument name="action" type="string"/>
        </arguments>
        <click selector="{{AdminProductGridSection.multicheckDropdown}}" stepKey="openMulticheckDropdown"/>
        <click selector="{{AdminProductGridSection.multicheckOption(action)}}" stepKey="selectDeselectAllProductsInGrid"/>
    </actionGroup>
</actionGroups>
