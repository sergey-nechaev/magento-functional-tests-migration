<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminDeleteSynonymGroupActionGroup">
        <annotations>
            <description>Delete synonyms group from grid on Search Synonyms page.</description>
        </annotations>
        <arguments>
            <argument name="text" type="string"/>
        </arguments>
        <click selector="{{AdminSearchSynonymsGridSection.selectFirstRow}}" stepKey="clickOnCheckboxButton"/>
        <click selector="{{AdminSearchSynonymsGridSection.actions}}" stepKey="clickActionsDropdown"/>
        <click selector="{{AdminSearchSynonymsGridSection.delete}}" stepKey="clickDelete"/>
        <waitForElementVisible selector="{{AdminSearchSynonymsGridSection.ok}}" stepKey="waitForOkToVisible"/>
        <click selector="{{AdminSearchSynonymsGridSection.ok}}" stepKey="clickOkConfirmationButton"/>
        <waitForPageLoad stepKey="waitForResultLoad" time="30"/>
    </actionGroup>
</actionGroups>
