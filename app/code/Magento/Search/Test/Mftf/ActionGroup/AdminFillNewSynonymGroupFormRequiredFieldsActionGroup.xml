<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminFillNewSynonymGroupFormRequiredFieldsActionGroup">
        <annotations>
            <description>Fill the form on the New Synonym Group creation page.</description>
        </annotations>
        <arguments>
            <argument name="scopeValue" type="string" defaultValue="All Websites"/>
            <argument name="synonyms" type="string"/>
        </arguments>
        <click selector="{{AdminNewSynonymsGroupFormSection.scopeValue('scopeValue')}}" stepKey="clickOnScopeValue"/>
        <fillField selector="{{AdminNewSynonymsGroupFormSection.synonyms}}" userInput="{{synonyms}}" stepKey="fillSynonyms"/>
    </actionGroup>
</actionGroups>
