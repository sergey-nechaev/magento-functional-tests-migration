<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontAssertFirstStepOnCheckoutIsAvailableActionGroup">
        <annotations>
            <description>Assert first step on Checkout page is available.</description>
        </annotations>
        <amOnPage url="{{CheckoutShippingPage.url}}" stepKey="navigateToShippingPage"/>
        <waitForPageLoad stepKey="waitForShippingPageLoad"/>
        <seeInCurrentUrl url="{{CheckoutShippingPage.url}}" stepKey="assertCheckoutShippingPageUrl"/>
    </actionGroup>
</actionGroups>
