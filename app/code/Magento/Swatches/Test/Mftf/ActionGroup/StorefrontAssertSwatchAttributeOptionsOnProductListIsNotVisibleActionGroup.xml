<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontAssertSwatchAttributeOptionsOnProductListIsNotVisibleActionGroup">
        <annotations>
            <description>See that an element which contains product swatches is not present on the category page</description>
        </annotations>
        <!-- Don't see a block with swatches -->
        <dontSeeElement selector="{{StorefrontProductInfoMainSection.swatchAttributeOptionsOnList}}" stepKey="doNotSeeElementWithSwatches"/>
    </actionGroup>
</actionGroups>
