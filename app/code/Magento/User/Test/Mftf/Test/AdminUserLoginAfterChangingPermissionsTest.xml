<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminUserLoginAfterChangingPermissionsTest">
        <annotations>
            <features value="User"/>
            <stories value="Update permissions for admin user and check user login"/>
            <title value="Admin user successfully login after changing user permissions"/>
            <description value="Admin user successfully login after changing user permissions"/>
            <group value="user"/>
            <group value="mtf_migrated"/>
        </annotations>

        <before>
            <actionGroup ref="LoginAsAdmin" stepKey="logIn"/>
        </before>
        <after>
            <actionGroup ref="logout" stepKey="logOut"/>
        </after>

        <!--Create New Role-->
        <actionGroup ref="AdminOpenCreateRolePageActionGroup" stepKey="goToNewRolePage"/>
        <actionGroup ref="AdminFillUserRoleFormActionGroup" stepKey="fillNewRoleForm">
            <argument name="role" value="roleSales"/>
        </actionGroup>
        <actionGroup ref="AdminClickSaveButtonOnUserRoleFormActionGroup" stepKey="saveNewRole"/>

        <!--Create New User-->
        <actionGroup ref="AdminCreateUserActionGroup" stepKey="createAdminUser">
            <argument name="role" value="roleSales"/>
            <argument name="User" value="admin2"/>
        </actionGroup>

        <!--Update the role resource access-->
        <actionGroup ref="AdminOpenRoleEditPageActionGroup" stepKey="openRoleEditPage">
            <argument name="roleName" value="{{roleSales.name}}"/>
        </actionGroup>
        <actionGroup ref="AdminUpdateRoleResourceAccessActionGroup" stepKey="setNewResourceAccess">
            <argument name="role" value="roleAdministrator"/>
        </actionGroup>
        <actionGroup ref="AdminClickSaveButtonOnUserRoleFormActionGroup" stepKey="saveNewResourceAccess"/>

        <!--Log out of admin and login with newly created user-->
        <actionGroup ref="logout" stepKey="logoutAsDefaultUser"/>
        <actionGroup ref="LoginAsAdmin" stepKey="loginAsNewUser">
            <argument name="adminUser" value="admin2"/>
        </actionGroup>
        <actionGroup ref="AssertAdminSuccessLoginActionGroup" stepKey="seeSuccessLoginMessage"/>

        <!--Delete new User-->
        <actionGroup ref="logout" stepKey="logOutAsNewUser"/>
        <actionGroup ref="LoginAsAdmin" stepKey="loginAsDefaultAdminUser"/>
        <actionGroup ref="AdminDeleteCustomUserActionGroup" stepKey="deleteNewUser">
            <argument name="user" value="admin2"/>
        </actionGroup>

        <!--Delete new Role-->
        <actionGroup ref="AdminDeleteUserRoleActionGroup" stepKey="deleteCustomRole">
            <argument name="roleName" value="{{roleSales.name}}"/>
        </actionGroup>

    </test>
</tests>
